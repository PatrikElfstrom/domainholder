<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title itemprop="name">{{ domain }}</title>
        <meta name="description" itemprop="description" content="{{ domain }}">
        <link href="{{ font.url }}" rel="stylesheet">
    </head>
    <style type="text/css">
        * {
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #{{ backgroundColor }};
            overflow: hidden;
        }

        a {
            text-decoration: none;
        }

        main {
            width: 90%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        main header {
            position: relative;     
            margin-bottom: 5em;
        }

        main header h1 {
            font-family: '{{ font.family }}', sans-serif;
            font-size: 8vw;
            line-height: 1;
            opacity: 0;
            color: #{{ textColor }};
            transition: opacity 100ms ease-in-out;
        }

        main header h1.fittext-complete {
            opacity: 1;
        }
        
        main header a {
            position: absolute;
            right: 0;
            bottom: 0;
            transform: translateY(100%);
            line-height: 1;
            color: #{{ textColor }};
        }

        main footer a {
            font-size: 3vw;
            color: #{{ textColor2 }};
        }
    </style>
    <body>
        <main>
            <header>
                <h1>{{ domain }}</h1>
                <a class="font" href="{{ font.siteUrl }}">{{ font.family }}</a>
            </header>
            <footer>
                <a href="mailto:info@{{ domain }}">info@{{ domain }}</a>
            </footer>
        </main>
        <script type="text/javascript" src="fittext.js"></script>
        <script>
            WebFontConfig = {
                active: function() {
                    document.getElementsByTagName('h1').fitText();
                },
                google: {
                    families: ['Open Sans', '{{ font.family }}']
                }
            };

            (function(d) {
                var wf = d.createElement('script'), s = d.scripts[0];
                wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js';
                s.parentNode.insertBefore(wf, s);
            })(document);

            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', '{{ googleAnalytics.trackingId }}', 'auto');
            ga('send', 'pageview');
        </script>
    </body>
</html>
